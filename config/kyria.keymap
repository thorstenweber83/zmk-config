#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>

#define DEFAULT 0
#define LOWER   1
#define RAISE   2
#define ADJUST  3
#define NAV     4

#define NONE 0

/ {
	keymap {
		compatible = "zmk,keymap";

		default_layer {
// ---------------------------------------------------------------------------------------------------------------------------------
// |  ESC  |  Q  |  W  |  E   |  R   |  T   |                                          |  Y   |  U    |  I    |  O   |   P   | BSPC |
//SHIFT/TAB|  A  |  S  |  D   |  F   |  G   |                                          |  H   |  J    |  K    |  L   |   ;   |   '  |
// |  CTRL |  Z  |  X  |  C   |  V   |  B   | L SHIFT | L SHIFT |  |   NAV   | L SHIFT |  N   |  M    |  ,    |  .   |   /   |ENTER |
//                     | CTRL | GUI  | ALT  |  LOWER  |  SPACE  |  |  SPACE  |  RAISE  | TAB  |ADJUST | R-ALT |
			bindings = <
	   &kp ESC &kp Q &kp W &kp E &kp R &kp T                                            &kp Y &kp U  &kp I    &kp O   &kp P    &kp BSPC
 &mt LSHFT TAB &kp A &kp S &kp D &kp F &kp G                                            &kp H &kp J  &kp K    &kp L   &kp SEMI &kp SQT
     &kp LCTRL &kp Z &kp X &kp C &kp V &kp B &none &none                  &tog NAV  &kp LSHFT &kp N &kp M  &kp COMMA &kp DOT &kp FSLH &kp RET
	              &kp LGUI &kp LALT &mo LOWER &kp SPACE &mo RAISE         &mo LOWER &kp SPACE &mo RAISE &mo NAV &kp RALT
			>;

			sensor-bindings = <&inc_dec_kp C_VOL_UP C_VOL_DN &inc_dec_kp PG_UP PG_DN>;
		};
		
		lower_layer {
// ---------------------------------------------------------------------------------------------------------------------------------
// |   ~   |  !  |  @  |  #   |  $   |  %   |                                          |  ^   |  &    |  *    |  (   |   )   |      |
// |  ESC  |  A  |  S  |  D   |  F   |  G   |                                          |  H   |  _    |  +    |  {   |   }   |  |   |
// | SHIFT |  Z  |  X  |  C   |  V   |  B   | L SHIFT | L SHIFT |  |   NAV   | L SHIFT |  N   |  M    |  ,    |  .   |   /   |ENTER |
//                     | CTRL | GUI  | ALT  |  LOWER  |  SPACE  |  |  SPACE  |  RAISE  | TAB  |ADJUST | R-ALT |
			bindings = <
    &kp TILDE &kp EXCL &kp AT &kp HASH &kp DLLR &kp PRCNT                            &kp CARET &kp AMPS &kp ASTRK &kp LPAR &kp RPAR   &kp BSPC
   &kp &trans &kp F1 &kp F2 &kp F3 &kp F4 &kp F5                                     &kp F6 &kp UNDER &kp PLUS &kp LBRC  &kp RBRC &kp PIPE
&kp &trans &kp F7 &kp F8 &kp F9 &kp F10 &kp F11 &none &bt BT_NXT    &tog NAV  &kp LSHFT &kp F12 &kp &trans &kp COMMA &kp DOT &kp FSLH &kp RET
	              &kp LGUI &kp LALT &mo LOWER &kp SPACE &mo ADJUST &mo LOWER &kp SPACE &mo ADJUST &mo NAV &kp RALT
			>;
		};
		
		raise_layer {
// ---------------------------------------------------------------------------------------------------------------------------------
// |  TAB  |  1  |  2  |  3   |  4   |  5   |                                          |  6   |  7    |  8    |  9   |   0   |      |
// |  ESC  |  A  |  S  |  D   |  F   |  G   |                                          |  H   |  -    |  =    |  [   |   ]   |  \   |
// | SHIFT |  Z  |  X  |  C   |  V   |  B   | L SHIFT | L SHIFT |  |   NAV   | L SHIFT |  N   |  M    |  ,    |  .   |   /   |ENTER |
//                     | CTRL | GUI  | ALT  |  LOWER  |  SPACE  |  |  SPACE  |  RAISE  | TAB  |ADJUST | R-ALT |
			bindings = <
   &kp GRAVE  &kp N1 &kp N2 &kp N3 &kp N4 &kp N5                                       &kp N6 &kp N7  &kp N8    &kp N9   &kp N0  &kp BSPC
   &trans     &kp F1 &kp F2 &kp F3 &kp F4 &kp F5                                       &kp F6 &kp MINUS &kp EQUAL &kp LBKT &kp RBKT &kp BSLH
   &trans     &kp Z &kp X &kp C &kp V &kp B &none &bt BT_NXT       &tog NAV  &kp LSHFT &kp N &kp M  &kp COMMA &kp DOT &kp FSLH &kp RET
	              &kp LGUI &kp LALT &mo ADJUST &kp SPACE &mo RAISE       &mo ADJUST &kp SPACE &mo RAISE &mo NAV  &kp RALT
			>;
		};
	
      	adjust_layer {
// ---------------------------------------------------------------------------------------------------------------------------------
// |       |  ä  |     |      |      |      |                                          |  ü   |       |       |      |   ö   |      |
// |       |     |  ß  |      |      |      |                                          |      |       |       |      |       |      |
// |       |     |     |      |      |      |                                          |      |       |       |      |       |      |
//                     |      |      |      |         |         |  |         |         |      |       |       |
			bindings = <
    &trans &kp RA(Q) &trans &trans &trans &trans                                           &trans  &trans  &trans  &trans &kp RA(P) &kp BSPC
    &trans &trans &trans &trans &trans &trans                                           &trans  &kp C_NEXT &kp C_VOL_DN  &kp C_VOL_UP &kp C_PLAY_PAUSE &trans
    &trans &trans &trans &trans &trans &trans &bt BT_CLR &bt BT_NXT       &trans &trans &trans  &trans  &trans  &trans &trans &trans
         	             &trans &trans &trans &trans &trans               &trans &trans &trans  &trans  &trans
			>;
		};

    	nav_layer {
// ---------------------------------------------------------------------------------------------------------------------------------
// |       |     |     |      |      |      |                                          |      |       |       |      |       |      |
// |       |     |     |      |      |      |                                          |      |       |       |      |       |      |
// |       |     |     |      |      |      |                                          |      |       |       |      |       |      |
//                     |      |      |      |         |         |  |         |         |      |       |       |
			bindings = <
    &trans &trans &trans &trans &trans &trans                                           &trans  &kp HOME &kp PG_UP &kp PG_DN &kp END &kp BSPC
    &trans &trans &trans &trans &trans &trans                                           &trans  &kp LEFT &kp DOWN &kp UP    &kp RIGHT   &trans
    &trans &trans &trans &trans &trans &trans &trans &trans               &tog NAV &trans &trans  &trans   &trans   &trans    &trans      &trans
         	             &trans &trans &trans &trans &trans               &trans &trans &trans  &mo NAV   &trans
			>;
		};



//    	empty_layer {
// ---------------------------------------------------------------------------------------------------------------------------------
